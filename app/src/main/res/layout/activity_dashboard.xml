<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.loginandregistration.DashboardActivity">


    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:padding="20dp" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/card1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@id/welcomeText"

        android:layout_alignParentLeft="true"
        >

        <TextView
            android:id="@+id/sBatchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp" />
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/card2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@id/welcomeText"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/sMajorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultLayout"
        android:layout_below="@id/card1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNo"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textResult"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/textResultStatus"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/depenLayout"
        android:layout_below="@id/resultLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textResultDepento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNo2"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDepen"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentLeft="true"
            />

    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/sessionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/depenLayout"
        android:textColor="@color/colorWhite"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_logout"
        android:text="@string/logout"
        android:textColor="@android:color/white"
        android:layout_below="@id/sessionText"/>



</RelativeLayout>
